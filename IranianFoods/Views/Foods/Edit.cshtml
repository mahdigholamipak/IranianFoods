@model IranianFoods.Models.ViewModels.FoodViewModel

@{
    ViewData["Title"] = "Edit Book";
}

<h2>ویرایش غذا</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">نام</label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label">توضیحات</label>
        <input asp-for="Description" class="form-control" value="@Model.Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image">تصویر</label>
        <input asp-for="Image" type="file" name="Image" accept="image/*" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>


    <div class="form-group">
        <input type="submit" value="ذخیره" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
