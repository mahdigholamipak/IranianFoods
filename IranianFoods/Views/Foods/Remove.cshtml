@model IranianFoods.Models.ViewModels.FoodViewModel

@{
    ViewData["Title"] = "Delete Book";
}

<h2>حذف ذا</h2>

<form asp-action="Remove" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <div>
        <p>از حذف این غذل اطمینان دارید؟</p>
        <dl class="row">
            <dt class="col-sm-2">تصویر:</dt>
            <dd class="col-sm-10">
                <img style="width: 100%; object-fit: cover; height: 200px; border-radius: 20px;" src="~/@Model.ImagePath" alt="@Model.Name" />
            </dd>

            <dt class="col-sm-2">نام:</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">توضیحات:</dt>
            <dd class="col-sm-10">@Model.Description</dd>

        </dl>
    </div>

    <button type="submit" class="btn btn-danger">حذف</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

